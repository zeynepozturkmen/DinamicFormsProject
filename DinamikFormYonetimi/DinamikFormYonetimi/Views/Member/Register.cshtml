<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>
        label{
            /*float:left;*/
            align-items:flex-start;
        }
        input{
           align-items:flex-end;
        }
        .clear {
            clear: both;
        }
    </style>

</head>
<body>

    <div class="container">
      
           
              
                <h2>Kullanıcı Kayıt</h2>
               
                <form method="post" action="/Member/Register">
                    <div class="form-group">

                        <label for="email">Kullanıcı Adı:</label>

                        <input type="text" class="form-control " id="email" placeholder="Kullanıcı Adınızı Giriniz.." name="UserName">

                    </div>


                    <div class="form-group">

                        <label for="email" >Email: </label>
                        <input type="email" class="form-control" id="email" placeholder="Emailinizi Giriniz.." name="Email">
                    </div>



                    <div class="form-group">
                        <label for="pwd" >Şifre:</label>
                        <input type="password" class="form-control " id="pwd" placeholder="Şifrenizi Giriniz.." name="Password">
                    </div>



                    <div class="form-group">
                        <label for="pwd" >Şifre Tekrarı:</label>
                        <input type="password" class="form-control" id="pwd" placeholder="Şifrenizi Tekrar Giriniz.." name="ConfirmPassword">
                    </div>

                    <div class="form-group">
                        <label for="pwd">Gizli Soru:</label>
                        <input type="text" class="form-control " id="pwd" placeholder="Gizli Sorunuzu Giriniz.." name="PasswordQuestion">
                    </div>

                    <div class="form-group">
                        <label for="pwd" >Gizli Cevap:</label>
                        <input type="text" class="form-control " id="pwd" placeholder="Gizli Cevabınızı Giriniz.." name="PasswordAnswer">
                    </div>



                    <button type="submit" class="btn btn-default">Kaydol</button>
                    @*<button type="submit" class="btn btn-default">Submit</button>*@
                    <a href="/Member/MemberLogin" class="btn btn-default">Giriş Yap</a>

                    <span class="text-success">@ViewBag.Message</span>
                    <span class="text-danger">@ViewBag.createMessage</span>

                </form>
            </div>
    
</body>
</html>
